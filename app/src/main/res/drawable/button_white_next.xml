<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="0dip" android:color="#9e3d1c" />
            <gradient android:angle="180" android:startColor="#E7EFF7" android:endColor="#E7EFF7" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="0dip" android:color="#000000" />
            <gradient android:angle="180" android:startColor="#2196F3" android:endColor="#03A9F4" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="0dip" android:color="#413E41"/>
            <gradient android:angle="180" android:startColor="#fffafafa" android:endColor="#fffafafa" />
        </shape>
    </item>
</selector>




































