<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basket"
    app:startDestination="@id/basketFragment">

    <fragment
        android:id="@+id/basketFragment"
        android:name="com.appmarketplace.ozon.presentation.activityes.ui.fragments.basket.BasketFragment"
        android:label="BasketFragment"
        tools:layout="@layout/fragment_basket"
        />
    <fragment
        android:id="@+id/detailsProductFragement3"
        android:name="com.appmarketplace.ozon.presentation.activityes.ui.fragments.detail.DetailsProductFragement"
        android:label="fragment_details_product"
        tools:layout="@layout/fragment_details_product">

        <argument
            android:name="product"
            app:argType="com.appmarketplace.ozon.domain.modelsUI.OnProductItem"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="transitionName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="deftransition" />


    </fragment>


    <action android:id="@+id/action_global_detailsProductFragement3" app:destination="@id/detailsProductFragement3" />
    <fragment
        android:id="@+id/makingOrderFragment2"
        android:name="com.appmarketplace.ozon.presentation.activityes.ui.fragments.makingOrder.MakingOrderFragment"
        android:label="fragment_making_order"
        tools:layout="@layout/fragment_making_order" />
</navigation>