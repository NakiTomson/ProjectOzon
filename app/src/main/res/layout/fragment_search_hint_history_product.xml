<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activityes.ui.fragments.searchHintHistory.SearchHintHistoryProductFragment"
    android:orientation="vertical">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/searchToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/custom_color_background_night"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways">

        <include layout="@layout/toolbar_custom" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/stubSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Популярные"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            >

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listHitProductsSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>




        <TextView
            android:id="@+id/exampleSearchOneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:drawableStart="@drawable/ic_search"
            android:drawableEnd="@drawable/ic_right"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp">

        </TextView>

        <TextView
            android:id="@+id/exampleSearchTwoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_right"
            android:drawableStart="@drawable/ic_search"
            android:layout_marginBottom="30dp"
            >
        </TextView>

        <TextView
            android:id="@+id/exampleSearchThreeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_right"
            android:drawableStart="@drawable/ic_search"
            android:layout_marginBottom="30dp"
            >
        </TextView>

        <TextView
            android:id="@+id/exampleSearchFoureTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_right"
            android:drawableStart="@drawable/ic_search"
            android:layout_marginBottom="30dp"
            >
        </TextView>
    </LinearLayout>


</LinearLayout>